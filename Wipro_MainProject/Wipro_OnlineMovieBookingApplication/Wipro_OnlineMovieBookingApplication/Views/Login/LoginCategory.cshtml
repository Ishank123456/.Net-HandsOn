@{
    ViewBag.Title = "Login Category";
}

<div style="text-align: center; margin-top: 100px;">
    <h2>Select Login Type</h2>

    <div style="margin-top: 20px;">
        @Html.ActionLink("Login as Admin", "AdminLogin", "Login", null, new { @class = "btn btn-primary", style = "width: 200px; margin-bottom: 20px;" })
    </div>

    <div>
        @Html.ActionLink("Login as User", "UserLogin", "Login", null, new { @class = "btn btn-secondary", style = "width: 200px;" })
    </div>
</div>

<style>
    body {
        background-color: #f0f0f0;
    }

    h2 {
        color: #333;
    }

    .btn {
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
    }
</style>
