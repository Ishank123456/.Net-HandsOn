@model Wipro_OnlineMovieBookingApplication.ViewModels.BookingViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Booking Details";
}

<style>
    body {
        background: #f4f4f9; /* Light grey background for the page */
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 1rem;
    }

    .card {
        background: #343a40; /* Dark background for the card */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        color: #ffffff; /* White text color for contrast */
        padding: 1.5rem;
    }

    .card-header {
        background: #495057;
        color: #ffffff;
        padding: 0.75rem;
        border-radius: 10px 10px 0 0;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
    }

    .card-body {
        padding: 1rem;
    }

        .card-body div {
            margin-bottom: 1rem;
            display: flex;
            justify-content: space-between;
        }

    .detail-label {
        font-weight: bold;
        color: #e9ecef; /* Light grey for labels */
    }

    .detail-value {
        color: #ced4da; /* Slightly lighter grey for values */
    }

    .btn-back {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        font-size: 16px;
        text-decoration: none;
        background-color: #007bff;
        color: #ffffff;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-back:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    hr {
        border: 0;
        border-top: 1px solid #495057;
        margin: 1.5rem 0;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            Booking Details
        </div>
        <div class="card-body">
            <div>
                <span class="detail-label">Email:</span>
                <span class="detail-value">@Model.Email</span>
            </div>
            <div>
                <span class="detail-label">Movie Name:</span>
                <span class="detail-value">@Model.MovieName</span>
            </div>
            <div>
                <span class="detail-label">Booking Date:</span>
                <span class="detail-value">@Model.BookingDate.ToShortDateString()</span>
            </div>
            <div>
                <span class="detail-label">Show Time:</span>
                <span class="detail-value">@Model.ShowTime</span>
            </div>
            <div>
                <span class="detail-label">Number of Tickets:</span>
                <span class="detail-value">@Model.NumberOfTickets</span>
            </div>
            <div>
                <span class="detail-label">Movie Price:</span>
                <span class="detail-value">@Model.MoviePrice.ToString("C", new CultureInfo("en-IN"))</span>
            </div>
            <div>
                <span class="detail-label">Total Price:</span>
                <span class="detail-value">@Model.TotalPrice.ToString("C", new CultureInfo("en-IN"))</span>
            </div>
            <hr />
            <div style="text-align: center;">
                <a href="@Url.Action("BookingDetails", "User", new { userId = Model.UserId })" class="btn-back">Back to Bookings List</a>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
