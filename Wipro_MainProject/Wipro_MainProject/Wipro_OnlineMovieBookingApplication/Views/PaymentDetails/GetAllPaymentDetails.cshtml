@model IEnumerable<Wipro_OnlineMovieBookingApplication.ViewModels.PaymentDetailsViewModel>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Body styling */
        body {
            padding: 20px;
            background-color: #f4f4f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Page header */
        h2 {
            text-align: center;
            font-size: 32px;
            color: #333;
            margin-bottom: 20px;
            font-weight: bold;
        }

        hr {
            border: 0;
            height: 4px;
            background-color: #4CAF50;
            width: 60px;
            margin: 10px auto;
        }

        /* Table styling */
        .table {
            margin-top: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow-x: auto;
            width: 100%;
        }

            .table th, .table td {
                text-align: center;
                padding: 15px;
                vertical-align: middle;
            }

            .table th {
                background-color: #007bff;
                color: white;
                font-size: 18px;
                padding: 20px;
            }

            .table td {
                font-size: 16px;
                padding: 18px;
            }

            /* Hover effect for table rows */
            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

        /* Payment status styles */
        .status {
            color: #28a745;
            font-weight: bold;
        }

        .status-pending {
            color: #ffc107;
            font-weight: bold;
        }

        /* Button styles */
        .btn-info {
            background-color: #007bff;
            border-color: #007bff;
            padding: 8px 20px;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            padding: 8px 20px;
            font-size: 14px;
        }

        /* Spacing for actions */
        td form, td a {
            margin-right: 5px;
        }

        /* Modal custom styling */
        .modal-title {
            font-size: 24px;
            color: #4CAF50;
        }

        .modal-body h3 {
            font-size: 22px;
            color: #333;
        }

        /* Ensuring modal is above all elements */
        .modal {
            z-index: 1050;
        }
    </style>
</head>



@{
    ViewData["Title"] = "Payment Details";
}

<!-- Title and Table -->
<br />
<br />
<br />
<h2>@ViewData["Title"]</h2>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Movie</th>
            <th>Total Amount</th>
            <th>Booking Date</th>
            <th>Payment Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.UserName</td>
                <td>@payment.Email</td>
                <td>@payment.MovieName</td>
                <td>@payment.Amount.ToString("C", new System.Globalization.CultureInfo("en-IN"))</td>
                <td>@payment.PaymentDate.ToString("dddd, dd MMMM yyyy hh:mm tt")</td>
                <td>
                    @if (payment.IsConfirmed)
                    {
                        <span class="status">Completed</span>
                    }
                    else
                    {
                        <span class="status-pending">Pending</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("GetPaymentDetailsForOne", "PaymentDetails", new { id = payment.PaymentId })" class="btn btn-info">View Details</a>

                    @if (!payment.IsConfirmed)
                    {
                        <form asp-action="ConfirmPayment" asp-controller="PaymentDetails" method="post" style="display:inline-block;">
                            <input type="hidden" name="paymentId" value="@payment.PaymentId" />
                            <button type="submit" class="btn btn-primary">Confirm Payment</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Structure for Success Message -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Payment Confirmed Successfully</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="okButton">OK</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Only show the modal when a payment is confirmed
    var paymentConfirmed = false; // This should be set dynamically based on the payment status
    $(document).ready(function () {
        if (paymentConfirmed) {
            $('#successModal').modal('show');
        }

        $('#okButton').click(function () {
            window.location.href = '@Url.Action("AdminDashboard", "Admin")';
        });
    });
</script>
