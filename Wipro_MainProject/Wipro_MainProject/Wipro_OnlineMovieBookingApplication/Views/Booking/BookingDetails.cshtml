@model IEnumerable<Wipro_OnlineMovieBookingApplication.ViewModels.BookingViewModel>
@using System.Globalization
@{
    ViewData["Title"] = "Bookings List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: url('https://i.ibb.co/R7x50Q1/VIEW-BOOKING.jpg') no-repeat center center fixed, #f4f4f9;
            background-size: cover; /* Ensures the image covers the entire background */
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }


        h2 {
            color: #2c3e50;
            font-size: 2rem;
            text-align: center;
            margin-bottom: 20px;
        }

        .table-container {
            margin: 0 auto;
            max-width: 90%;
        }

        .table {
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        thead {
            background-color: #3498db;
            color: white;
        }

        th, td {
            text-align: center;
            padding: 15px;
        }

        tr {
            transition: background-color 0.2s ease-in-out;
        }

            tr:hover {
                background-color: #ecf0f1;
            }

        .btn-info {
            background-color: #1abc9c;
            color: white;
            border-radius: 5px;
            transition: background-color 0.2s ease;
        }

            .btn-info:hover {
                background-color: #16a085;
            }

        .empty-message {
            text-align: center;
            font-size: 1.2rem;
            color: #7f8c8d;
        }
    </style>
</head>
<body>

    <h2>@ViewData["Title"]</h2>

    <div class="table-container">
        @if (!Model.Any())
        {
            <p class="empty-message">No bookings available.</p>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Movie Name</th>
                        <th>Booking Date</th>
                        <th>Show Time</th>
                        <th>Number of Tickets</th>
                        <th>Movie Price</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.Email</td>
                            <td>@booking.MovieName</td>
                            <td>@booking.BookingDate.ToShortDateString()</td>
                            <td>@booking.ShowTime</td>
                            <td>@booking.NumberOfTickets</td>
                            <td>@booking.MoviePrice.ToString("C", new CultureInfo("en-IN"))</td>
                            <td>@booking.TotalPrice.ToString("C", new CultureInfo("en-IN"))</td>
                            <td>
                                <a href="@Url.Action("BookingDetailsForOne", "Booking", new { bookingId = booking.BookingId })" class="btn btn-info">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
