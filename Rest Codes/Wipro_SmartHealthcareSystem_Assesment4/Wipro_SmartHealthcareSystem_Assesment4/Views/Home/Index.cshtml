@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #e0e0e0 !important;
            }

        .hero-section {
            background: linear-gradient(135deg, #71b7e6, #9b59b6);
            color: #fff;
            padding: 100px 20px;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3.5rem;
            }

            .hero-section p {
                font-size: 1.25rem;
            }

        .feature-box {
            text-align: center;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .feature-box h3 {
                margin-bottom: 15px;
            }

        .btn-custom {
            background-color: #007bff;
            border: none;
            color: #fff;
            padding: 15px 30px;
            font-size: 16px;
            border-radius: 25px;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .footer {
            padding: 20px;
            background: #e9ecef;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Healthcare Management System</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Login")">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Register", "Register")">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 mb-4">Welcome to the Healthcare Management System</h1>
            <p class="lead">Your all-in-one solution for managing healthcare efficiently and effectively.</p>
            <a href="@Url.Action("Login", "Login")" class="btn btn-custom me-3">Login</a>
            <a href="@Url.Action("Register", "Register")" class="btn btn-custom">Sign Up</a>
        </div>
    </section>

    <!-- Features Section -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-box">
                    <h3>Easy Access</h3>
                    <p>Quickly log in to your personalized dashboard and access the features you need most.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <h3>Secure Records</h3>
                    <p>Maintain and manage patient records securely with our state-of-the-art security measures.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <h3>24/7 Availability</h3>
                    <p>Access the system anytime, anywhere, ensuring you never miss an important update.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <div class="footer mt-5">
        <p class="text-muted">Don't have an account yet? Sign up now to experience the convenience of managing your healthcare needs with our cutting-edge platform.</p>
    </div

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
