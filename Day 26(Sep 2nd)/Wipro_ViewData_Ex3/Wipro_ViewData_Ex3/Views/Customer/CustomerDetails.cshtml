<html>
    <head>
        <title>Customer Details Page</title>
        <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        </style>
    </head>

    <body>
    <h1 style="font-style:italic; text-align:center">Customer Table</h1>

    <table class = "table table-striped "style="width:100%">
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Address</th>
            <th>Customer City</th>
        </tr>
        @{
            foreach (var item in (List<Customer>)ViewData["LstCustomer"])
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerAddress</td>
                    <td>@item.CustomerCity</td>
                </tr>
            }
        }
    </table>
    </body>
</html>
