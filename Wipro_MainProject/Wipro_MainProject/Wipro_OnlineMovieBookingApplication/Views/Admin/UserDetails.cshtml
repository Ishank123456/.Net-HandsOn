@model IEnumerable<UserViewModel>
@using Wipro_OnlineMovieBookingApplication.ViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: url('https://i.ibb.co/PQS5xvj/VIEW-USERS.jpg') no-repeat center center fixed, linear-gradient(to right, #e0eafc, #cfdef3);
        background-size: cover; /* Ensure the image covers the viewport */
        padding-top: 50px;
    }


    .card {
        border: none;
        border-radius: 10px;
        background-color: white;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .card-header {
        background-color: #4CAF50;
        color: white;
        font-size: 22px;
        padding: 10px 20px;
        border-radius: 10px 10px 0 0;
        text-align: center;
    }

    .card-body {
        padding: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #333;
        color: white;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        font-size: 16px;
        text-transform: uppercase;
    }

    tbody tr {
        transition: background-color 0.2s ease;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
    }

    .btn-info:hover {
        background-color: #2980b9;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-success {
        background-color: #2ecc71;
        color: white;
    }

    .btn-success:hover {
        background-color: #27ae60;
    }

    h3 {
        font-size: 20px;
        margin-bottom: 20px;
        text-align: center;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            User List
        </div>
        <div class="card-body">
            <h3>Manage Users</h3>
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Contact</th>
                        <th>User Name</th>
                        <th>Password</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Password)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-info">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-success">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
