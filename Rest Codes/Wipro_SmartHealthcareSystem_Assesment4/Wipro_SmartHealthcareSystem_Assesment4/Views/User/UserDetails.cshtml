@model Domain.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>User ID:</strong> @Model.UserId</li>
            <li class="list-group-item"><strong>Username:</strong> @Model.UserName ?? "N/A"</li>
            <li class="list-group-item"><strong>Email:</strong> @Model.Email ?? "N/A"</li>
            <li class="list-group-item"><strong>First Name:</strong> @Model.FirstName ?? "N/A"</li>
            <li class="list-group-item"><strong>Last Name:</strong> @Model.LastName ?? "N/A"</li>
            <li class="list-group-item"><strong>Address:</strong> @Model.Address ?? "N/A"</li>
            <li class="list-group-item"><strong>Contact No:</strong> @Model.ContactNo ?? "N/A"</li>
            <li class="list-group-item"><strong>Is Admin:</strong> @(Model.IsAdmin == 1 ? "Yes" : "No")</li>
        </ul>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("UserDashboard", "User", new{id = Model.UserId})" class="btn btn-secondary">Back to Dashboard</a>
</div>

