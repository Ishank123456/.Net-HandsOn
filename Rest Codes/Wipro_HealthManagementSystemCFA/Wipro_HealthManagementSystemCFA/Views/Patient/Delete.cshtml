@model Wipro_HealthManagementSystemCFA.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<h4>Patient</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        First Name
    </dt>
    <dd class="col-sm-10">
        @Model.FirstName
    </dd>
    <dt class="col-sm-2">
        Last Name
    </dt>
    <dd class="col-sm-10">
        @Model.LastName
    </dd>
    <dt class="col-sm-2">
        Date of Birth
    </dt>
    <dd class="col-sm-10">
        @Model.Dob
    </dd>
    <dt class="col-sm-2">
        Gender
    </dt>
    <dd class="col-sm-10">
        @Model.Gender
    </dd>
    <dt class="col-sm-2">
        Address
    </dt>
    <dd class="col-sm-10">
        @Model.Address
    </dd>
    <dt class="col-sm-2">
        Phone Number
    </dt>
    <dd class="col-sm-10">
        @Model.PhoneNumber
    </dd>
    <dt class="col-sm-2">
        Email
    </dt>
    <dd class="col-sm-10">
        @Model.Email
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PatientId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

