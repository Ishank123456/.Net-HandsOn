@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("AddPatient", "Admin")" class="btn btn-primary btn-block">Add Patient Details</a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("AddDoctor", "Admin")" class="btn btn-primary btn-block">Add Doctor Details</a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("Create", "Appointment")" class="btn btn-primary btn-block">Create Appointment</a>
        </div>
    </div>

    <hr class="my-4" />

    <div class="row">
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("PatientDetails", "Admin")" class="btn btn-secondary btn-block">View Patient Details</a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("DoctorDetails", "Admin")" class="btn btn-secondary btn-block">View Doctor Details</a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("AppointmentDetails", "Appointment")" class="btn btn-secondary btn-block">View Appointment Details</a>
        </div>
    </div>
</div>

