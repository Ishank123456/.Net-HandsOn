@using Wipro_OnlineMovieBookingApplication.ViewModels
@model UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<style>
    body {
        background: #f8f9fa; /* Light background color for the page */
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 1rem;
    }

    .card {
        background: #ffffff; /* White background for the card */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
    }

    .card-header {
        background: #007bff; /* Primary color for header */
        color: #ffffff;
        padding: 0.75rem;
        border-radius: 8px 8px 0 0;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }

    .card-body dl {
        margin: 0;
    }

    .card-body dt {
        font-weight: bold;
    }

    .card-body dd {
        margin: 0;
        padding-bottom: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding: 0.5rem 1.25rem;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-back {
        text-decoration: none;
        color: #007bff;
        font-size: 16px;
        padding: 0.5rem 1.25rem;
        border-radius: 5px;
        transition: color 0.3s ease;
    }

    .btn-back:hover {
        color: #0056b3;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            Delete User
        </div>
        <div class="card-body">
            <h4 class="text-center">Are you sure you want to delete this user?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.UserId)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ContactNo)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ContactNo)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Password)
                </dd>
            </dl>
            <form asp-action="Delete">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Details" asp-route-id="@Model.UserId" class="btn-back">Back to Profile</a>
                <input type="hidden" asp-for="UserId" />
            </form>
        </div>
    </div>
</div>
