@model Wipro_OnlineMovieBookingApplication.ViewModels.UserViewModel

<div class="container">
    <h2>User Dashboard</h2>
    <p>Name: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Contact Number: @Model.ContactNo</p>

    <h3>Booking Details</h3>
    @if (Model.Bookings.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Movie ID</th>
                    <th>Booking ID</th>
                    <th>Booking Date</th>
                    <th>Show Time</th>
                    <th>Number of Tickets</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.UserId</td>
                        <td>@booking.MovieId</td>
                        <td>@booking.BookingId</td>
                        <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                        <td>@booking.ShowTime</td>
                        <td>@booking.NumberOfTickets</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No bookings available for this user.</p>
    }
</div>


    <a asp-action="UserDashboard" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-primary">Go to Dashboard</a>
</div>
