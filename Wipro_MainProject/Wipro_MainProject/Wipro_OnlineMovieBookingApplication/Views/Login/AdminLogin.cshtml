@model Wipro_OnlineMovieBookingApplication.ViewModels.UserLoginViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Portal - Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background: url('https://i.ibb.co/1bcmkS0/admin-login.jpg') no-repeat center center fixed,linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            background-size: cover; /* Ensures the image covers the whole background */
            overflow: hidden;
        }





        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            margin: auto;
            animation: fadeIn 1s ease-in-out;
        }

        .login-container h2 {
            color: #333;
            text-align: center;
            font-size: 26px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .form-group label {
            font-size: 14px;
            color: #555;
        }

        .form-control {
            height: 45px;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 15px;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .text-center h7 {
            font-size: 14px;
            color: #555;
        }

        .text-center a {
            color: #007bff;
            text-decoration: none;
            font-weight: 600;
        }

        .text-center a:hover {
            text-decoration: underline;
        }

        /* Input Field Animation */
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
            outline: none;
            transition: 0.3s ease;
        }

        }
    </style>
</head>
<body>

<section id="login-section">
    <div class="login-container">
        <div>
            <h2>Admin Portal - Login</h2>
            <form asp-action="AdminLogin">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="text" asp-for="Email" placeholder="Enter your email" value="ishu@gmail.com" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" placeholder="Enter your password" value="199" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" class="btn btn-success mb-2" value="Sign In" />
                </div>
            </form>

            <div class="text-center">
                <h7>Don't have an account?</h7>
                <a href="@Url.Action("Register", "Register")">Sign up</a>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
