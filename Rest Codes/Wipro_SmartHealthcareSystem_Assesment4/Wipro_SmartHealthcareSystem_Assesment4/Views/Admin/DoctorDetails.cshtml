@model IEnumerable<Domain.Models.Doctor>

@{
    ViewData["Title"] = "Doctor Details";
}

<h2>Doctor Details</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Doctor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialty</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Office Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.DoctorId</td>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Specialty</td>
                <td>@doctor.PhoneNumber</td>
                <td>@doctor.Email</td>
                <td>@doctor.OfficeLocation"</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddDoctor" class="btn btn-primary">Add New Doctor</a>
<a asp-action="AdminDashboard" class="btn btn-secondary">Back to Dashboard</a>

