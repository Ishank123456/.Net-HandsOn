@model IEnumerable<Wipro_OnlineMovieBookingApplication.ViewModels.PaymentDetailsViewModel>

@{
    ViewData["Title"] = "Payment Details";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Body styling */
        body {
            padding: 20px;
            background-color: #f4f4f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Page header */
        h2 {
            text-align: center;
            font-size: 32px;
            color: #333;
            margin-bottom: 20px;
            font-weight: bold;
        }

        hr {
            border: 0;
            height: 4px;
            background-color: #4CAF50;
            width: 60px;
            margin: 10px auto;
        }

        /* Table styling */
        .table {
            margin-top: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow-x: auto;
            width: 100%;
        }

            .table thead th {
                background-color: #007bff;
                color: white;
                font-size: 18px;
                text-transform: uppercase;
                padding: 15px;
            }

            .table tbody td {
                font-size: 16px;
                padding: 12px;
            }

            .table tbody tr {
                transition: background-color 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: #f1f1f1;
                }

            .table td p {
                margin: 0;
            }

        .status {
            color: #28a745;
            font-weight: bold;
        }

        .status-pending {
            color: #ffc107;
            font-weight: bold;
        }

        /* Button styling */
        .btn-info {
            background-color: #007bff;
            border-color: #007bff;
            padding: 8px 16px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            .btn-info:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            padding: 8px 16px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
</head>

<body>
    <div class="container">
        <!-- Page Header -->
        <br />
        <br />
        <br />
        <br />
        <br />
        <h2>@ViewData["Title"]</h2>
        <br />
        <br />
        <h4>Name:  @ViewBag.UserNames[0].FirstName @ViewBag.UserNames[0].LastName</h4>

        <!-- Payment Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Total Amount</th>
                        <th>Booking Date</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td data-label="Movie Name"> @payment.MovieName</td>
                            <td data-label="Total Amount">@payment.Amount.ToString("C", new System.Globalization.CultureInfo("en-IN"))</td>
                            <td data-label="Booking Date">@payment.PaymentDate.ToShortDateString() / @payment.PaymentDate.ToShortTimeString()</td>
                            <td data-label="Payment Status">
                                @if (payment.IsConfirmed)
                                {
                                    <p class="status">Completed</p>
                                }
                                else
                                {
                                    <p class="status-pending">Pending</p>
                                }
                            </td>
                            <td data-label="Actions">
                                <a href="@Url.Action("GetPaymentDetailsForOne", "PaymentDetails", new { userId = payment.UserId, id = payment.PaymentId })" class="btn btn-info">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
