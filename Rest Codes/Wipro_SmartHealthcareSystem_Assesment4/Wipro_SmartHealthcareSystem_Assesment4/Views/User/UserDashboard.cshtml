@model Domain.Models.User

@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">User Dashboard</h1>

    <div class="row">
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("UserDetails", "User", new { id = Model.UserId })" class="btn btn-info btn-block">User Details</a>
        </div>
    </div>

    <hr class="my-4" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("ListOfPatients", "Patient")" class="btn btn-info btn-block">View Patient Details</a>
        </div>
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("ListOfDoctors", "Doctor")" class="btn btn-info btn-block">View Doctor Details</a>
        </div>
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("AppointmentDetails", "Appointment")" class="btn btn-secondary btn-block">View Appointment Details</a>
        </div
    </div>
</div>

<!-- Optional: Include Bootstrap CSS for better styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

