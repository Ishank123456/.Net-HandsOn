@model IEnumerable<Domain.Models.Patient>

@{
    ViewData["Title"] = "Patient Details";
}

<h2>Patient Details</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientId</td>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>@patient.Gender</td>
                <td>@patient.PhoneNumber</td>
                <td>@patient.Email</td>
                <td>@patient.Address</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddPatient" class="btn btn-primary">Add New Patient</a>
<a asp-action="AdminDashboard" class="btn btn-secondary">Back to Dashboard</a>
